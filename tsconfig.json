{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",

    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,

    "jsx": "react-jsx"
  },
  "include": ["./packages/**/*", "./types/*"],
  "exclude": ["vitest.config.ts"]
}
